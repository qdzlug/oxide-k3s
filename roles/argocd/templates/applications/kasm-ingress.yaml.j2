apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: kasm
  namespace: kasm
  annotations:
    cert-manager.io/cluster-issuer: "{{ argocd_tls_issuer }}"
    traefik.ingress.kubernetes.io/router.tls: "true"
    external-dns.alpha.kubernetes.io/hostname: "{{ kasm_hostname }}"
    external-dns.alpha.kubernetes.io/target: "{{ nginx_lb_external_ip }}"
    # KASM requires websocket support
    traefik.ingress.kubernetes.io/router.middlewares: "kasm-headers@kubernetescrd"
spec:
  ingressClassName: traefik
  tls:
  - hosts:
    - "{{ kasm_hostname }}"
    secretName: kasm-tls
  rules:
  - host: "{{ kasm_hostname }}"
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: kasm-proxy  # KASM proxy service
            port:
              number: 8443