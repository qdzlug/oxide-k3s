apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: letsencrypt-http
spec:
  acme:
    email: "{{ cert_manager_email }}"
    server: "https://acme{% if not cert_manager_production %}-staging{% endif %}-v02.api.letsencrypt.org/directory"
    privateKeySecretRef:
      name: letsencrypt-http-key
    solvers:
      - http01:
          ingress:
            class: "{{ cert_manager_http01_ingress_class }}"

